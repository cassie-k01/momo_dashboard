{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "transaction.schema.json",
  "title": "Transaction (detailed)",
  "type": "object",
  "properties": {
    "transaction_id": { "type": "integer" },
    "external_ref": { "type": ["string","null"] },
    "sender_id": { "type": "integer" },
    "receiver_id": { "type": "integer" },
    "category_id": { "type": "integer" },
    "amount": { "type": "number", "minimum": 0 },
    "currency": { "type": "string", "pattern": "^[A-Z]{3,5}$" },
    "transaction_date": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["Pending","Success","Failed","Reversed"] },
    "message": { "type": ["string","null"] },
    "created_at": { "type": "string", "format": "date-time" },

    "sender": { "$ref": "user.schema.json" },
    "receiver": { "$ref": "user.schema.json" },
    "category": { "$ref": "category.schema.json" },
    "processing_log": {
      "type": "array",
      "items": { "$ref": "system_log.schema.json" }
    }
  },
  "required": ["transaction_id","sender_id","receiver_id","amount","currency","transaction_date","status"],
  "additionalProperties": false
}
