{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user.schema.json",
  "title": "User",
  "type": "object",
  "properties": {
    "user_id": { "type": "integer" },
    "name": { "type": "string" },
    "phone_number": {
      "type": "string",
      "pattern": "^\\+?[0-9]{7,15}$",
      "description": "E.164-like phone"
    },
    "email": { "type": ["string","null"], "format": "email" },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "required": ["user_id","name","phone_number"],
  "additionalProperties": false
}
